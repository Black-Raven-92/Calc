<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyleNight" parent="ButtonStyle">
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginBottom">0.2dp</item>
    </style>

    <style name="ButtonStyle2" parent="ButtonStyle">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="strokeColor">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="ButtonStyle3" parent="ButtonStyle">
        <item name="backgroundTint">@color/green</item>
        <item name="strokeColor">@color/purple_200</item>
        <item name="android:textColor">@color/yellow_red</item>

    </style>

    <style name="ButtonStyleLand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">0.2dp</item>

    </style>
</resources>